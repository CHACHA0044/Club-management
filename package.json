{
    "name": "club-management",
    "version": "1.0.0",
    "description": "Club Management System Monorepo",
    "private": true,
    "workspaces": [
        "server",
        "client"
    ],
    "scripts": {
        "start": "npm run start --workspace=@club/server",
        "client": "npm run start --workspace=@club/client",
        "server": "npm run start --workspace=@club/server",
        "dev": "concurrently \"npm run dev --workspace=@club/server\" \"npm run start --workspace=@club/client\"",
        "build": "npm run build --workspace=@club/client",
        "install-all": "npm install"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}